# ========================================
# Application Configuration
# ========================================
NEXT_PUBLIC_APP_NAME=Echo
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_VERSION=0.1.0

# ========================================
# API Configuration (Backend)
# ========================================
# Replace with your backend API URL when available
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_KEY=your_api_key_here
NEXT_PUBLIC_API_TIMEOUT=30000

# ========================================
# Feature Flags
# ========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_LIVE_STREAMING=false
NEXT_PUBLIC_ENABLE_VIDEO_CALLS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PWA=false

# ========================================
# Theme Settings
# ========================================
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_AVAILABLE_THEMES=dark,light,ocean-breeze,sunset-glow,forest-mystique,royal-purple,rose-gold,midnight-galaxy,cyberpunk,monochrome,aurora

# ========================================
# Security
# ========================================
NEXT_PUBLIC_ENABLE_XSS_PROTECTION=true
NEXT_PUBLIC_ENABLE_CONTENT_SANITIZATION=true
NEXT_PUBLIC_ENABLE_CSP=true

# ========================================
# Third-Party Services
# ========================================
# Analytics (e.g., Google Analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (Error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Firebase (if using)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id

# ========================================
# Development
# ========================================
# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Show dev tools
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# Mock API responses
NEXT_PUBLIC_USE_MOCK_API=false

# ========================================
# Build Configuration
# ========================================
# Enable source maps in production
GENERATE_SOURCEMAP=false

# Bundle analyzer
ANALYZE=false

# ========================================
# Database (Backend)
# ========================================
DATABASE_URL=postgresql://user:password@localhost:5432/echo
DATABASE_POOL_SIZE=10

# ========================================
# Authentication (Backend)
# ========================================
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d

# OAuth Providers (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ========================================
# Email Service (Backend)
# ========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@echo-platform.example.com

# SendGrid (alternative)
SENDGRID_API_KEY=your_sendgrid_api_key

# ========================================
# File Storage
# ========================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=echo-uploads

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# ========================================
# Redis (Caching / Sessions)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ========================================
# Payment (if implementing e-commerce)
# ========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ========================================
# Content Delivery Network (CDN)
# ========================================
CDN_URL=https://cdn.echo-platform.example.com

# ========================================
# WebSockets (Real-time features)
# ========================================
WEBSOCKET_URL=ws://localhost:8000/ws
WEBSOCKET_RECONNECT_INTERVAL=5000

# ========================================
# Monitoring & Performance
# ========================================
# New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Datadog
DD_API_KEY=your_datadog_api_key

# ========================================
# Notes
# ========================================
# 1. Copy this file to .env.local and fill in your values
# 2. Never commit .env.local to version control
# 3. Use strong, unique values for all secrets in production
# 4. Rotate secrets regularly
# 5. Use environment-specific values (dev, staging, production)
