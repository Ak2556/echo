# Database Configuration (Production optimized for 10K users)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/echo_tuition
DATABASE_POOL_SIZE=120
DATABASE_MAX_OVERFLOW=80
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration (Production optimized)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=300
REDIS_PASSWORD=
REDIS_SSL=False

# MinIO Configuration (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=echo-tuition-media
MINIO_USE_SSL=False

# JWT Authentication (RS256 for production-grade auth)
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem
JWT_ISSUER=echo-api
JWT_AUDIENCE=echo-app
ACCESS_TOKEN_EXPIRES_MINUTES=15
REFRESH_TOKEN_EXPIRES_DAYS=7

# Legacy JWT (for backward compatibility)
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# OpenAI for AI Recommendations
OPENAI_API_KEY=your-openai-api-key

# Stripe Payment
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Application Settings
APP_NAME=Echo Tuition Marketplace
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (Required for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True
SMTP_SSL=False
EMAIL_FROM=noreply@echo-tuition.com
EMAIL_FROM_NAME=Echo Platform
EMAIL_ENABLED=True

# Email Templates
EMAIL_TEMPLATE_DIR=./app/templates/email
EMAIL_VERIFICATION_SUBJECT=Verify your Echo account
PASSWORD_RESET_SUBJECT=Reset your Echo password
OTP_EMAIL_SUBJECT=Your Echo verification code

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30
